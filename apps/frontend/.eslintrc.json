{
  "extends": ["../../.eslintrc.base.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": [
          "apps/frontend/tsconfig.json",
          "apps/frontend/tsconfig.spec.json"
        ]
      },
      "rules": {}
    },
    {
      "files": ["*.config.js", "*.config.ts", "jest.config.ts", "jest.setup.ts"],
      "parserOptions": {
        "project": null
      },
      "rules": {
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ]
}
