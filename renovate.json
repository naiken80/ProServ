{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    "group:allNonMajor"
  ],
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "stabilityDays": 3,
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
