{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/frontend/*": [
        "apps/frontend/src/*"
      ],
      "@proserv/shared": [
        "packages/shared/src/index.ts"
      ],
      "@proserv/shared/*": [
        "packages/shared/src/*"
      ]
    },
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
